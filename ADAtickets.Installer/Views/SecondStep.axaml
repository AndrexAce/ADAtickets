<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:assets="clr-namespace:ADAtickets.Installer.Assets"
             xmlns:vm="clr-namespace:ADAtickets.Installer.ViewModels"
             mc:Ignorable="d"
             x:Class="ADAtickets.Installer.Views.SecondStep"
             x:DataType="vm:MainViewModel">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <StackPanel Orientation="Vertical" Margin="20 20 20 20" Spacing="20" HorizontalAlignment="Stretch">
        <TextBlock Text="{x:Static assets:Resources.PleaseInsert}"
                   FontFamily="Segoe UI"
                   HorizontalAlignment="Center" />
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Image Source="/Assets/Docker.png" Width="100" />
            <UniformGrid Columns="2" HorizontalAlignment="Stretch" ColumnSpacing="20" RowSpacing="20" Width="760">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock Text="{x:Static assets:Resources.DbUserNameLabel}" FontFamily="Segoe UI" />
                    <TextBox Text="{Binding DbUserName}" Watermark="postgres" HorizontalAlignment="Stretch" Width="NaN" />
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock Text="{x:Static assets:Resources.DbPasswordLabel}" FontFamily="Segoe UI" />
                    <TextBox Text="{Binding DbPassword}" Watermark="postgres" HorizontalAlignment="Stretch"
							 Width="NaN" />
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock Text="{x:Static assets:Resources.SslCertificatePathLabel}" FontFamily="Segoe UI" />
                    <TextBox Text="{Binding SslCertificatePath}" Watermark="{x:Static assets:Resources.CertificatePathWatermark}"
                             HorizontalAlignment="Stretch" Width="NaN" />
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock Text="{x:Static assets:Resources.SslCertificatePasswordLabel}" FontFamily="Segoe UI" />
                    <TextBox Text="{Binding SslCertificatePassword}" Watermark="{x:Static assets:Resources.PasswordWatermark}" HorizontalAlignment="Stretch"
							 Width="NaN" />
                </StackPanel>
            </UniformGrid>
        </StackPanel>
        <Separator />
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Image Source="/Assets/AzureDevOps.png" Width="100" />
            <UniformGrid Columns="2" HorizontalAlignment="Stretch" ColumnSpacing="20" RowSpacing="20" Width="760">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock Text="{x:Static assets:Resources.DevOpsOrganizationNameLabel}" FontFamily="Segoe UI" />
                    <TextBox Text="{Binding DevOpsOrganizationName}"
                             Watermark="{x:Static assets:Resources.ExampleNameWatermark}" HorizontalAlignment="Stretch"
                             Width="NaN" />
                </StackPanel>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
					<TextBlock Text="{x:Static assets:Resources.ServicePrincipalIdLabel}" FontFamily="Segoe UI" />
					<TextBox Text="{Binding ServicePrincipalId}"
                             Watermark="00000000-0000-0000-0000-000000000000" HorizontalAlignment="Stretch"
                             Width="NaN" />
				</StackPanel>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
					<TextBlock Text="{x:Static assets:Resources.BasicAuthUsernameLabel}" FontFamily="Segoe UI" />
					<TextBox Text="{Binding BasicAuthUsername}"
                             Watermark="{x:Static assets:Resources.BasicUsernameWatermark}" HorizontalAlignment="Stretch"
                             Width="NaN" />
				</StackPanel>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
					<TextBlock Text="{x:Static assets:Resources.BasicAuthPasswordLabel}" FontFamily="Segoe UI" />
					<TextBox Text="{Binding BasicAuthPassword}"
                             Watermark="{x:Static assets:Resources.PasswordWatermark}" HorizontalAlignment="Stretch"
                             Width="NaN" />
				</StackPanel>
            </UniformGrid>
        </StackPanel>
        <Separator />
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Image Source="/Assets/Azure.png" Width="100" />
            <UniformGrid Columns="2" HorizontalAlignment="Stretch" ColumnSpacing="20" RowSpacing="20" Width="760">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock Text="{x:Static assets:Resources.TenantIdLabel}" FontFamily="Segoe UI" />
                    <TextBox Text="{Binding TenantId}" Watermark="00000000-0000-0000-0000-000000000000"
                             HorizontalAlignment="Stretch" Width="NaN" />
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock Text="{x:Static assets:Resources.ExternalTenantIdLabel}" FontFamily="Segoe UI" />
                    <TextBox Text="{Binding ExternalTenantId}" Watermark="00000000-0000-0000-0000-000000000000"
                             HorizontalAlignment="Stretch" Width="NaN" />
                </StackPanel>
            </UniformGrid>
        </StackPanel>
        <Button Content="{x:Static assets:Resources.Next}"
                HorizontalAlignment="Center"
                FontFamily="Segoe UI"
                Classes="accent"
                Command="{Binding GoToThirdStepCommand}" />
    </StackPanel>
</UserControl>