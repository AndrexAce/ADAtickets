@inherits LayoutComponentBase

<FluentDesignTheme @bind-Mode="@Mode" CustomColor="#7A6040" StorageName="theme" />

<CascadingValue Value="@Mode" Name="ThemeMode">
    <FluentLayout>
        <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
            <FluentBodyContent Class="body-content">
                <div class="content" style="display: flex; flex-direction: row;">
                    @Body
                </div>
            </FluentBodyContent>
        </FluentStack>
        <FluentFooter Style="display: flex; flex-direction: row; column-gap: 2em; position: fixed; bottom: 0; width: 100%; background: none;">
            <FluentButton Appearance="Appearance.Accent" IconStart="@(new Icons.Regular.Size20.BrightnessHigh())" OnClick="UpdateTheme"></FluentButton>
            <FluentButton Appearance="Appearance.Accent" IconStart="@(new Icons.Regular.Size20.LockClosed())"></FluentButton>
            <FluentButton Appearance="Appearance.Accent" IconStart="@(new Icons.Regular.Size20.Cookies())"></FluentButton>
            <CultureSelector />
        </FluentFooter>
    </FluentLayout>
</CascadingValue>

<FluentTooltipProvider />

@code {
    DesignThemeModes Mode { get; set; } = DesignThemeModes.Light;

    void UpdateTheme(MouseEventArgs e)
    {
        Mode = DesignThemeModes.Light == Mode ? DesignThemeModes.Dark : DesignThemeModes.Light;
    }
}
