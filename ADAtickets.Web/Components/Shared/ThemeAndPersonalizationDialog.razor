@implements IDialogContentComponent

@inject IStringLocalizer<ThemeAndPersonalizationDialog> loc

<FluentDialogHeader ShowDismissTooltip="false">
    <FluentStack VerticalAlignment="VerticalAlignment.Center">
        <FluentLabel Typo="Typography.PaneHeader">
            @loc["ThemeAndPersonalizationDialogTitle"]
        </FluentLabel>
    </FluentStack>
</FluentDialogHeader>

<FluentDialogBody>
    <FluentStack Orientation="Orientation.Vertical">
        <FluentRadioGroup Label="@loc["ThemeLabel"]"
                          Orientation="Orientation.Vertical"
                          @bind-Value="mode">
            <FluentRadio Value="DesignThemeModes.System">@loc["SystemTheme"]</FluentRadio>
            <FluentRadio Value="DesignThemeModes.Light">@loc["LightTheme"]</FluentRadio>
            <FluentRadio Value="DesignThemeModes.Dark">@loc["DarkTheme"]</FluentRadio>
        </FluentRadioGroup>

        <FluentLabel Style="margin-bottom: 0.1rem;">@loc["LanguageLabel"]</FluentLabel>
        <CultureSelector />
    </FluentStack>
</FluentDialogBody>

<FluentDialogFooter Visible="false" />
<FluentDesignTheme @bind-Mode="mode" CustomColor="#7A6040" StorageName="theme" />

@code {

    /// <summary>
    ///     The dialog object bound to this component.
    /// </summary>
    [CascadingParameter]
    public FluentDialog Dialog { get; set; } = default!;

    private DesignThemeModes mode;

}
